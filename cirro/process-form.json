{
  "form": {
    "title": "ICONICC Pipeline",
    "type": "object",
    "properties": {
      "input_type": {
        "type": "string",
        "title": "Input Type",
        "enum": [
          "multiple",
          "single"
        ],
        "default": "single",
        "description": "Select `single` to manually select a normal/tumor input pair; `multiple` will pair all normal and tumor samples for a given patient."
      }
    },
    "dependencies": {
      "input_type": {
        "oneOf": [
          {
            "properties": {
              "input_type": {
                "const": "multiple"
              }
            }
          },
          {
            "properties": {
              "input_type": {
                "const": "single"
              },
              "participant_id": {
                "type": "string",
                "title": "participant_id",
                "description": "Identifier for the sample.",
                "default": ""
              },
              "tumor_sample_id": {
                "type": "string",
                "title": "tumor_sample_id",
                "description": "",
                "default": ""
              },
              "normal_sample_id": {
                "type": "string",
                "title": "normal_sample_id",
                "description": "",
                "default": ""
              },
              "tumor_input_bam": {
                "type": "string",
                "title": "tumor_input_bam",
                "description": "",
                "pathType": "dataset",
                "file": "**/*.bam"
              },
              "tumor_input_bam_index": {
                "type": "string",
                "title": "tumor_input_bam_index",
                "description": "",
                "pathType": "dataset",
                "file": "**/*.bam.bai"
              },
              "normal_input_bam": {
                "type": "string",
                "title": "normal_input_bam",
                "description": "",
                "pathType": "dataset",
                "file": "**/*.bam"
              },
              "normal_input_bam_index": {
                "type": "string",
                "title": "normal_input_bam_index",
                "description": "",
                "pathType": "dataset",
                "file": "**/*.bam.bai"
              },
              "sample_sex": {
                "type": "string",
                "title": "",
                "enum": [
                  "",
                  "male",
                  "female"
                ],
                "default": ""
              }
            },
            "required": [
              "participant_id",
              "tumor_sample_id",
              "normal_sample_id",
              "tumor_input_bam",
              "normal_input_bam",
              "tumor_input_bam_index",
              "normal_input_bam_index",
              "sample_sex"
            ]
          }
        ]
      }
    }
  },
  "ui": {
    "sample_sex": {
      "ui:widget": "radio"
    }
  }
}